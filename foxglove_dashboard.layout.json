{
  "config": {
    "layout": {
      "root": {
        "id": "root",
        "type": "row",
        "children": [
          {
            "id": "motors-col",
            "type": "column",
            "children": [
              {
                "id": "joint-motors-panel",
                "type": "timeseries",
                "title": "Joint Motors (Position & Torque)",
                "config": {
                  "topics": [
                    { "topic": "/motor", "field": "position[0]" },
                    { "topic": "/motor", "field": "position[1]" },
                    { "topic": "/motor", "field": "effort[0]" },
                    { "topic": "/motor", "field": "effort[1]" }
                  ]
                }
              },
              {
                "id": "drive-motors-panel",
                "type": "timeseries",
                "title": "Driving Motors (Pos / Vel / Torque)",
                "config": {
                  "topics": [
                    { "topic": "/motor", "field": "position[2]" },
                    { "topic": "/motor", "field": "velocity[2]" },
                    { "topic": "/motor", "field": "effort[2]" },
                    { "topic": "/motor", "field": "position[3]" },
                    { "topic": "/motor", "field": "velocity[3]" },
                    { "topic": "/motor", "field": "effort[3]" },
                    { "topic": "/motor", "field": "position[4]" },
                    { "topic": "/motor", "field": "velocity[4]" },
                    { "topic": "/motor", "field": "effort[4]" },
                    { "topic": "/motor", "field": "position[5]" },
                    { "topic": "/motor", "field": "velocity[5]" },
                    { "topic": "/motor", "field": "effort[5]" },
                    { "topic": "/motor", "field": "position[6]" },
                    { "topic": "/motor", "field": "velocity[6]" },
                    { "topic": "/motor", "field": "effort[6]" },
                    { "topic": "/motor", "field": "position[7]" },
                    { "topic": "/motor", "field": "velocity[7]" },
                    { "topic": "/motor", "field": "effort[7]" }
                  ]
                }
              }
            ]
          },
          {
            "id": "controller-col",
            "type": "column",
            "children": [
              {
                "id": "buttons-panel",
                "type": "rawmessages",
                "title": "PS4 Buttons",
                "config": {
                  "topic": "/controller",
                  "fields": ["buttons"]
                }
              },
              {
                "id": "triggers-panel",
                "type": "timeseries",
                "title": "PS4 Triggers (L2 / R2)",
                "config": {
                  "topics": [
                    { "topic": "/controller", "field": "axes[2]" },
                    { "topic": "/controller", "field": "axes[5]" }
                  ]
                }
              },
              {
                "id": "joysticks-panel",
                "type": "plot",
                "title": "Joystick Position",
                "config": {
                  "topic": "/controller",
                  "xField": "axes[0]",
                  "yField": "axes[1]",
                  "style": "scatter"
                }
              }
            ]
          }
        ]
      }
    }
  },
  "name": "Motors + Controller Dashboard"
}
